<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Combustibles_compras_fragment">

    <RelativeLayout
        style="@style/parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:weightSum="12">

            <LinearLayout
                style="@style/parent"
                android:background="@drawable/login_shape_bk"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageView
                    style="@style/parent"
                    android:background="@drawable/ic_login_bk"
                    android:layout_height="100dp"
                    android:contentDescription="login background"
                    />
            </LinearLayout>



        </LinearLayout>
        <TextView
            style="@style/headerText"
            android:layout_gravity="center"
            android:text="Combustibles - Compras"
            android:layout_marginTop="5dp"/>

        <TextView
            style="@style/headerText"
            android:layout_gravity="center"
            android:id="@+id/txtfechas"
            android:text="Precios en tiempo real"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/solicitados_combustibles"
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_marginTop="100dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/headerText"
                        android:textSize="25dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Precios x Lts"/>

                    <TextView
                        android:id="@+id/txtloncomilla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"

                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Loncomilla: $ 796 "
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtmolina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Molina: $ 794 "
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtpoblacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="170dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Población: $ 792 "
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtviñales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="220dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Viñales: $ 795 "
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </RelativeLayout>

</FrameLayout>